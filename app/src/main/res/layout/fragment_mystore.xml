<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/layout_store_brief"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/layout_store_brief_content_having"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:background="@drawable/customborder_onboard_f6_8dp"
            android:visibility="visible">


            <TextView
                android:id="@+id/tv_shop_brief"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"
                android:text=""
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_shop_brief_editation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/tv_shop_brief"
                android:text="@string/shopmore"
                android:textSize="14sp"
                android:textColor="@color/turquoise"/>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/imgBtn_shop_brief_adding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:src="@mipmap/ic_addshopbreif"/>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/layout_new_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_store_brief"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/customborder_addproduct"
        android:elevation="4dp"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/layout_add_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_addproduct">

            <ImageView
                android:id="@+id/iv_addproduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_addproduct" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_productname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_add_product"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:text="商品名稱" />

        <TextView
            android:id="@+id/tv_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_productname"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:text="HKD"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_currentnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_productname"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_current"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_shopbag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_current"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/ic_shopping_bag" />

        <TextView
            android:id="@+id/tv_sold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_currentnumber"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_shopbag"
            android:text="已賣出"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/iv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_current"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tv_sold"
            android:src="@mipmap/ic_amount" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_currentnumber"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_amount"
            android:text="數量"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/iv_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_shopbag"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/ic_heart" />

        <TextView
            android:id="@+id/tv_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sold"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_heart"
            android:text="讚"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/iv_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_amount"
            android:layout_marginStart="37dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tv_heart"
            android:src="@mipmap/ic_eye" />

        <TextView
            android:id="@+id/tv_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_amount"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="14dp"
            android:layout_toRightOf="@id/iv_eye"
            android:text="檢視"
            android:textSize="10sp" />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_newproduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="10.5dp"
        android:layout_marginEnd="10.5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="48dp"
        android:layout_below="@id/layout_store_brief"
        android:visibility="visible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_products" />


