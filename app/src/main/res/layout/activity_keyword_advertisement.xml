<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_shopbg">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:elevation="120dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imgView_loading_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:elevation="120dp"
        android:visibility="gone"
        android:src="@drawable/customview_loading_background" />

    <RelativeLayout
        android:id="@+id/layout_adTitle"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:src="@mipmap/ic_arrow_back"
            android:contentDescription="@string/empty"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/keyword_advertisement"
            android:textColor="@color/dark_gray"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_notify"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/empty"
            android:src="@mipmap/ic_notification" />

        <TextView
            android:id="@+id/tv_notifycount"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/customborder_round_turquise"
            android:gravity="center"
            android:visibility="gone"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_adTitle">
        <RelativeLayout
            android:id="@+id/layout_ad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/layout_keyword_commercial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/list" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="@string/keyword_advertisement"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/info" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:outlineSpotShadowColor="@color/hkshop_color"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layout_add_product_ad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/customborder_0dp_purple_7b61ff"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="16dp">

                                <ImageView
                                    android:id="@+id/iv_shopping_bag_keyword_advertisement"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/ic_shopping_bag_advertisement" />

                                <TextView
                                    android:id="@+id/tv_product_keyword_advertisement"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_toRightOf="@id/iv_shopping_bag_keyword_advertisement"
                                    android:text="@string/product_keyword_advertisement"
                                    android:textColor="@color/white"
                                    android:textSize="18sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/iv_shopping_bag_keyword_advertisement"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/add_keyword_advertisement"
                                    android:textColor="@color/white"
                                    android:textSize="18sp" />

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_productAd_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/layout_firstKeywordAd_product"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginTop="12dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_toRightOf="@id/iv_productIcon"
                                        android:orientation="horizontal">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/cv_firstKeywordAd_icon"
                                            android:layout_width="32dp"
                                            android:layout_height="32dp"
                                            app:cardCornerRadius="2dp">

                                            <ImageView
                                                android:id="@+id/iv_firstProductAd_icon"
                                                android:layout_width="35dp"
                                                android:layout_height="match_parent"
                                                android:scaleType="centerCrop"
                                                android:src="@mipmap/no_image" />
                                        </androidx.cardview.widget.CardView>

                                        <TextView
                                            android:id="@+id/tv_firstProductAd_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="8dp"
                                            android:layout_weight="1"
                                            android:text=""
                                            android:textColor="@color/black"
                                            android:textSize="12sp" />

                                        <RelativeLayout
                                            android:id="@+id/layout_firstProductAd_statusBtn"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="8dp"
                                            android:background="@drawable/customborder_8dp_purple_7b61ff"
                                            android:padding="8dp">

                                            <ImageView
                                                android:id="@+id/iv_firstProductAd_status"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:src="@mipmap/pause" />

                                            <TextView
                                                android:id="@+id/tv_firstProductAd_status"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_marginLeft="4dp"
                                                android:layout_toRightOf="@id/iv_firstProductAd_status"
                                                android:text="@string/pause"
                                                android:textColor="@color/white"
                                                android:textSize="14sp" />

                                            <ImageView
                                                android:id="@+id/iv_firstProductAd_edit"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_marginLeft="4dp"
                                                android:layout_toRightOf="@id/tv_firstProductAd_status"
                                                android:src="@mipmap/more_white" />

                                        </RelativeLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginRight="16dp"
                                        android:layout_marginTop="8dp"
                                        android:layout_marginBottom="12dp"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@mipmap/clock_three_pm"/>
                                        <TextView
                                            android:id="@+id/tv_firstProductAd_after_days_over"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="4dp"
                                            android:text=""
                                            android:textSize="12sp"
                                            android:textColor="@color/bright_gray"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:visibility="invisible"
                                            android:text="@string/after_days_over"
                                            android:textSize="12sp"
                                            android:textColor="@color/bright_gray"/>
                                        <ImageView
                                            android:id="@+id/iv_firstProductAd_keyword"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@mipmap/keyword"/>
                                        <TextView
                                            android:id="@+id/tv_firstProductAd_keyword"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="4dp"
                                            android:text="@string/keyword_unimportant"
                                            android:textSize="12sp"
                                            android:textColor="@color/bright_gray"/>
                                        <TextView
                                            android:id="@+id/tv_firstProductAd_keyword_count"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text=""
                                            android:textSize="12sp"
                                            android:textColor="@color/bright_gray"/>
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@mipmap/dollar_sign"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:visibility="gone"
                                            android:text="@string/expenditure"
                                            android:textSize="12sp"
                                            android:textColor="@color/bright_gray"/>
                                        <TextView
                                            android:id="@+id/tv_firstProductAd_expenditure"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginLeft="4dp"
                                            android:text=""
                                            android:textSize="12sp"
                                            android:textColor="@color/bright_gray"/>

                                    </LinearLayout>

                                </LinearLayout>


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/recyclerview_productAd"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        tools:listitem="@layout/item_advertisement" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/layout_product_drop_down"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@drawable/customborder_0dp_gray_eaeaec">

                            <ImageView
                                android:id="@+id/iv_product_drop_down"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/purple_drop_down" />
                        </RelativeLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:outlineSpotShadowColor="@color/hkshop_color"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/layout_add_store_ad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/customborder_0dp_hkcolor"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="16dp">

                                <ImageView
                                    android:id="@+id/iv_shop_keyword_commercial"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/ic_shop_commercial" />

                                <TextView
                                    android:id="@+id/tv_store_keyword_advertisement"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_toRightOf="@id/iv_shop_keyword_commercial"
                                    android:text="@string/store_keyword_advertisement"
                                    android:textColor="@color/white"
                                    android:textSize="18sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/iv_shop_keyword_commercial"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/add_keyword_advertisement"
                                    android:textColor="@color/white"
                                    android:textSize="18sp" />

                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layout_storeAd_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/layout_firstKeywordAd_store"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_toRightOf="@id/iv_productIcon"
                                    android:orientation="horizontal">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cv_firstStoreAd_icon"
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        app:cardCornerRadius="2dp">

                                        <ImageView
                                            android:id="@+id/iv_firstStoreAd_icon"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:src="@mipmap/no_image" />
                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:id="@+id/tv_firstStoreAd_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="8dp"
                                        android:layout_weight="1"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="12sp" />

                                    <RelativeLayout
                                        android:id="@+id/layout_firstStoreAd_statusBtn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:background="@drawable/customborder_8dp_hkcolor"
                                        android:padding="8dp">

                                        <ImageView
                                            android:id="@+id/iv_firstStoreAd_status"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:src="@mipmap/pause" />

                                        <TextView
                                            android:id="@+id/tv_firstStoreAd_status"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="4dp"
                                            android:layout_toRightOf="@id/iv_firstStoreAd_status"
                                            android:text="@string/pause"
                                            android:textColor="@color/white"
                                            android:textSize="14sp" />

                                        <ImageView
                                            android:id="@+id/iv_firstStoreAd_edit"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="4dp"
                                            android:layout_toRightOf="@id/tv_firstStoreAd_status"
                                            android:src="@mipmap/more_white" />

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="12dp"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/clock_three_pm"/>
                                    <TextView
                                        android:id="@+id/tv_firstStoreAd_after_days_over"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:text=""
                                        android:textSize="12sp"
                                        android:textColor="@color/bright_gray"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:visibility="invisible"
                                        android:text="@string/after_days_over"
                                        android:textSize="12sp"
                                        android:textColor="@color/bright_gray"/>
                                    <ImageView
                                        android:id="@+id/iv_firstStoreAd_keyword"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/keyword"/>
                                    <TextView
                                        android:id="@+id/tv_firstStoreAd_keyword"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:text="@string/keyword_unimportant"
                                        android:textSize="12sp"
                                        android:textColor="@color/bright_gray"/>
                                    <TextView
                                        android:id="@+id/tv_firstStoreAd_keyword_count"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text=""
                                        android:textSize="12sp"
                                        android:textColor="@color/bright_gray"/>
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/dollar_sign"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone"
                                        android:text="@string/expenditure"
                                        android:textSize="12sp"
                                        android:textColor="@color/bright_gray"/>
                                    <TextView
                                        android:id="@+id/tv_firstStoreAd_expenditure"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="4dp"
                                        android:text=""
                                        android:textSize="12sp"
                                        android:textColor="@color/bright_gray"/>

                                </LinearLayout>
                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/layout_recyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerview_storeAd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:listitem="@layout/item_advertisement" />

                            </RelativeLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/layout_store_drop_down"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@drawable/customborder_0dp_gray_eaeaec">

                            <ImageView
                                android:id="@+id/iv_store_drop_down"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/blue_drop_dwon" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:src="@drawable/bg_learn_more"/>
    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="251dp"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/notification_background_radius">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="24dp"
            android:text="COMING SOON"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:text="由於還在草創階段，店匯正在籌備買賣等功能以及累積店鋪商品數量。版本2.0即將開通進階功能，敬請期待！"
            android:textColor="@color/dark_gray"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_know_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:src="@mipmap/ic_kowmore"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/btn_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:src="@mipmap/ic_return"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>